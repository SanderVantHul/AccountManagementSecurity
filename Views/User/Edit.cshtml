@model EditInputModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User @Model.UserName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditUserName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <table>
                    <tr>
                        <td>
                            <input asp-for="UserName" class="form-control" />
                        </td>
                        <td>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </td>
                    </tr>
                </table>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </form>
        <form method="post" asp-action="EditEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <table>
                    <tr>
                        <td>
                            <input asp-for="Email" class="form-control" />
                        </td>
                        <td>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </td>
                    </tr>
                </table>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </form>
        <form method="post" asp-action="EditPhoneNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <table>
                    <tr>
                        <td>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </td>
                        <td>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </td>
                    </tr>
                </table>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </form>
        <form method="post" asp-action="EditPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <table>
                    <tr>
                        <td>
                            <input asp-for="Password" class="form-control" />
                        </td>
                        <td>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </td>
                    </tr>
                </table>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }